procedure TConnection.FDConnectionAfterConnect(Sender: TObject);
begin
 FDConnection.ExecSQL('CREATE TABLE IF NOT EXISTS pessoa (    nome       TEXT (80),    email      TEXT (100),    senha      TEXT (16),    cpf        STRING (14),    celular    TEXT (15),    tipoPessoa TEXT (40),    id         INTEGER (5),    cnpj       TEXT (15) );');
end;

end.

